							<option value="hidden">Типи документів</option>
							<option value="mark">Маркетинг</option>
							<option value="rules">Правила ТРЦ</option>
							<option value="rent">Аренда</option>
							<option value="else">Інше</option>
						</select>
					</div>
					<div class="row col-12  col-sm-7 col-md-12 mb-0">
